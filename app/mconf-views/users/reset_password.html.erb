<%= form_tag url_for(:action => "reset_password" , :method => :put) do %>
  <%= t('user.new_password')%>:<br />
  <%= password_field_tag :password %><br />
  <%= t('user.confirm_password')%>:<br />
  <%= password_field_tag :password_confirmation %><br />
  <%= submit_tag t('user.reset_password'), :class => "basic_button medium_button blue_button" %>
<% end %>
