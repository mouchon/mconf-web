<h3 class="dialog_title">
  <%= t('bbb_room.edit') %>
</h3>

<div id="edit-bbb-room">
  <%= form_for(current_user.bigbluebutton_room, :url => user_path, :html => { :method => :put, :multipart => true }) do |f| %>
    <%= hidden_field_tag :bbb_room, "1" %>
    <div id="priv_check">
      <%= f.check_box :private, :id => "private" %> <%= f.label :name, t('bbb_room.private') %>
    </div>
    <div class="passwords <%= "hide_fields" unless @room.private %>">
      <div class="field">
        <%= f.label :moderator_password, t('bbb_room.moderatorPW') %>:<br/>
        <%= f.text_field :moderator_password, :id => "moderatorPW" %>
      </div>
      <div class="field">
        <%= f.label :attendee_password, t('bbb_room.attendeePW') %>:<br/>
        <%= f.text_field :attendee_password, :id => "attendeePW" %>
      </div>
    </div>
    <div id="site_button" class="margin-up">
      <button type="submit" class="basic_button blue_button"><%=t("button.update")%></button>
    </div>
  <%end%>
</div>
