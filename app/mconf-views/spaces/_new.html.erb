onCropLogoFormSuccess = function() {
  $('#crop_logo_form').ajaxForm({
    beforeSubmit:function() {
      $("#selected_logo_image").attr('src', "");
    },
    target: '#resultado',
    success: function() {
      $('#resultado').fadeIn('slow');
