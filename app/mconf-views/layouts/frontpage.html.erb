<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
  "http://www.w3.org/TR/html4/strict.dtd">

<html>
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <title><%= content_for?(:title) ? yield(:title) : current_site.name %></title>
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />

        <%= stylesheet_link_tag "common", :media => "screen, projection" %>
        <%= stylesheet_link_tag "header_big", :media => "screen, projection" %>
        <%= stylesheet_link_tag "frontpage", :media => "screen, projection" %>
        <%= stylesheet_link_tag "lightbox", :media => "screen, projection" %>
        <%= stylesheet_link_tag "jquery.fancybox", :media => "screen, projection" %>
        <%= stylesheet_link_tag "token-input-facebook", :media => "screen, projection" %>

        <%= javascript_include_tag 'jquery', 'application', 'jquery.livequery', 'jquery.fancybox', 'jquery.easing.1.3',
                                   'jquery.galleryview-2.1.1-pack', 'jquery.galleryview-2.1.1', 'jquery.timers-1.2','jquery.qtip-1.0.0-rc3',
                                   'rails.js', 'jquery.tokeninput' %>
        <%= csrf_meta_tag %>


    <script type="text/javascript" charset="utf-8">

    $(document).ready(function() {
      <%= render :partial => 'layouts/ready.js.erb' %>

      $('#gallery').galleryView({
        gallery_width: '320',
        gallery_height: '273',
        frame_width: 73,
        frame_height: 46,
        pause_on_hover: true
      });
      <%= yield :javascript%>
    });

    </script>

    <%= yield :headers %>
  </head>

  <body>
    <div id="site">
      <%= render :partial => "layouts/frontpage_global" %>
      <div id="home">
        <div id="header">
          <%= render :partial => "layouts/frontpage_header" %>
        </div>

        <div id="frontpage_flashs">
          <% flash.each do |name, msg| %>
            <div class="<%= name %>"><%= msg.html_safe %></div>
          <% end %>
        </div>

        <div id="content">
          <%= yield %>
        </div>

        <div id="sponsor-wrapper">
          <%= render :partial => "layouts/sponsor" %>
        </div>

        <div id="footer-wrapper">
          <%= render :partial => "layouts/footer" %>
        </div>

      </div>

    </div>

    <%= render :partial => "layouts/analytics" %>
  </body>
</html>
