<% rounded() do %>

<p>
  <b><%= t('name.one') %>:</b>
  <%=h @role.name %>
</p>

<p>
  <b><%= t('stage_type') %>:</b> 
  <%=h @role.stage_type.humanize %>
</p>

<p>
<b><%= t('permission.other') %>:</b><br/>

<% if @role.permissions.any? -%>
  <% @role.permissions.each do |permission| -%>
    <%= permission.title %><br />
  <% end -%>
<% else -%>
<%= "Role %s hasn't any permission" / @role.name %>
<% end -%>
</p>


<%= link_to t('edit'), edit_role_path(@role) %> |
<%= link_to t('back'), roles_path %>

  <%end%>


<%= render :partial =>'shared/sidebar'%>
